/* my_answer.wxss */
/*喵问*/
.qustion_wrap{
  margin-bottom:16rpx;
  width:690rpx;
  padding:0 30rpx;
  background:#fff;
}
.question_title .more{
  width:44rpx;
  height:44rpx;
  position:absolute;
  right:20rpx;
  top:25rpx;
}
/*发帖者*/
.question_title{
  height: 96rpx;
  line-height: 96rpx;
  font-weight:bold;
}
.question_title .question_title_name{
  font-size:32rpx;
  color:#333335;
  line-height: 39rpx;
}
/*问题内容*/
.question_content{
   padding-top:28rpx;
}
.question_content .question_content_title{
  font-weight: 600;
  font-size:36rpx;
  margin-bottom:28rpx;
  color:#333;
}
 .question_title_img{
  width:28rpx;
  height:28rpx;
  margin-right:14rpx;
}
.question_content .question_content_des{
  font-size:32rpx;
  color:#333334;
  line-height: 55rpx;
}
.question_content image{
   width:100%;
  height:388rpx;
}

/*删除*/
.question_time{
  font-size:24rpx;
  color:#99999A;
  padding: 29rpx 0;
}
.del{
  color:#00ACEE;
  font-size:24rpx;
  margin-left:39rpx;
}

/*没有消息*/
.nonemsg{
  margin-top:100rpx;
  text-align: center;
}
.nonemsg image{
  width:180rpx;
  height:185rpx;
}
.nonemsg view{
  font-size:32rpx;
  color:#666;
}