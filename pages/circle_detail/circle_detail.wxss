/* circle_detail.wxss */
/*帖子详情*/
.cirlce_detail_wrap{
  padding:0 30rpx;
  background: #fff;
  margin-top:20rpx;
}
.circle_detail_title{
 padding:20rpx 0
}
.circle_detail_title image{
  width:60rpx;
  height:60rpx;
  float:left;
  margin-right:20rpx;
  margin-top:8rpx;
  border-radius: 50%;
}
.cirlce_detail .circle_detail_name{
  display:block;
  font-size:32rpx;
  font-weight: bold;
  color:#333334;
}
.cirlce_detail .circle_detail_time{
 display:block;
 font-size:24rpx;
 color:#999999;
}
.cirlce_detail .circle_detail_content{
  padding-bottom:20rpx;
}
.circle_detail_content .des{
  font-size:32rpx;
  line-height:55rpx;
  color:#333334;
  
}
.circle_detail_content image{
  width:100%;
  height:388rpx;
  margin-top:20rpx;
}
/*评论列表*/
.comment_list{
  width:100%;
  /* height:100rpx; */
  background: #fff;
  margin-top:16rpx;
  margin-bottom:200px;
}
.comment_list_title{
  padding: 0px 30rpx;
  height:100rpx;
  line-height: 100rpx;
  font-size:30rpx;
  margin-bottom:2rpx;
  color:#333;
  font-weight:600;
  border-bottom:1rpx solid #D5D5D7;
}
.comment_list_content{
  width:90%;
  padding:10px 20px 0 30rpx;
  height:auto;
  background: #fff;
  display:flex;
}
.comment_list_content_left {
  width:13%;
  flex:1;
}
.comment_list_content_left image{
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.comment_list_content_right{
  width:87%;
  border-bottom:1rpx solid #D5D5D7;
    padding-bottom:20rpx;
}
.comment_list_content:last-child .comment_list_content_right{
  border-bottom:none;
}
.comment_list_content_right_like{
  display:flex;
}
.comment_list_content_right_like .like_num{
  font-size:24rpx;
  color:#999999;
  line-height:46rpx;
}
.comment_list_content_right_img{
  width:44rpx;
  height:44rpx;
 
}
.comment_list_content_name{
  font-size:34rpx;
  flex-grow:1;
}
.comment_list_content_right .comment_list_content_des{
  font-size:32rpx;
  line-height:50rpx;
  display: block;
  margin-bottom:20rpx;

}
/*点击评论*/
.circle_comment_bottom{
   display: inline-block;
  /*width: 25%;*/
  /*text-align: center;*/
  font-size: 24rpx;
  color: #999999;
  margin-right:80rpx;
  margin-left:40rpx;
}
.circle_comment_bottom:last-child{
  margin-right:0;
}


.circle_comment{
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  background: #fff;
  box-shadow: 0px -3px 3px rgba(0,0,0,0.02);
}
.circle_comment view{
  display:inline-block;
}
.circle_comment_img{
  width:44rpx;
  height:44rpx;
 vertical-align: middle;
}
.circle_comment_bottom text{
  vertical-align: middle;

}
.iw{
  display: flex;
  flex-direction: row;
}
.reverse_images{
  width:140rpx;
  height: 140rpx;
  margin-right:30rpx;
  margin-bottom:18rpx;
  display: inline-block;
}
.circle_comment_share{
  border:none;
  background:#fff;
}
button[plain]{
  border:1px solid #fff;
  /*position: fixed;*/
  /*bottom:-28rpx;*/
  color:#999999;
 position: absolute;
 top:25rpx;
 /*right:28rpx;*/
}


