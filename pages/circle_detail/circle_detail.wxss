.nonemsg{
  margin-top:-350rpx;
  text-align: center;
  margin-bottom:200rpx;
}
.nonemsg image{
 width:180rpx;
 height:185rpx;
}
.nonemsg view{
  font-size:32rpx;
  color:#666;
}